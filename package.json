{
  "name": "pulp",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prisma-studio": "(cd src-tauri && npx prisma studio)",
    "prisma-generate-rust": "(cd src-tauri && cargo prisma generate)",
    "cargo": "func() { (cd src-tauri && cargo \"$@\"); }; func", 
    "prisma-prepare-schema-js": "node tools/prisma-prepare-schema.js src-tauri/prisma/schema.prisma",
    "prisma-js": "npm run prisma-prepare-schema-js && npx prisma --",
    "prisma-generate-all": "npm run cargo -- prisma generate && npm run prisma-js -- generate",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.2.3",
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^33.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-solid": "~0.9.4",
    "prisma": "^4.9.0",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vite-plugin-solid": "^2.5.0"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "@tauri-apps/api": "^1.2.0",
    "lodash-es": "^4.17.21",
    "solid-js": "^1.6.0"
  },
  "volta": {
    "node": "18.12.1"
  }
}
